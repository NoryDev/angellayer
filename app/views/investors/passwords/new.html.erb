<div class="col-xs-12 col-sm-6 col-sm-offset-3">
  <h4>Forgot your password?</h4>

  <hr>
  <%= link_to "I'm not an Investor, I'm a Founder", new_password_path(:founder), class: "btn btn-success" %>
  <br>
  <br>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true, placeholder:"Email", label: false %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Send Password Reset", {class: "btn btn-primary"} %>
    </div>
  <% end %>
  <br>
  <div class="btn-group" role="group">
    <%= render "investors/shared/links" %>
  </div>
</div>
