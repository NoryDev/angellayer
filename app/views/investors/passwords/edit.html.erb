<h4>Change your password</h4>
<hr>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, placeholder: "New password", required: true, autofocus: true, label: false %>
    <%= f.input :password_confirmation, placeholder: "Confirm your new password", required: true, label: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Change my password", {class: "btn btn-primary"} %>
  </div>
<% end %>
<br>
<div class="btn-group" role="group">
  <%= render "investors/shared/links" %>
</div>
