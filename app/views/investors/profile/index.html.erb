<!-- app/views/investors/profile/index.html.erb -->
<h1>All the Investors</h1>

<div class="alert alert-warning">Are we missing an investor you know? Add it!</div>
<div class="padded text-center">
  <%= link_to "Add an investor", new_investor_registration_path, class: "btn btn-success" %>
</div>

<% @investors.each do |investor| %>

  <% profile = investor.investor_profile %>

  <div class="img-container img-rounded full-padded">
    <div class="row">

      <div class="col-xs-12 col-sm-3">
        <%= link_to investors_profile_path(investor) do %>
          <%= image_tag profile.profile_pic.url(:thumb), size: "100x100", alt: profile.company_name %>
        <% end %>
      </div>

      <div class="col-xs-12 col-sm-9">
        <% if profile.company_name %>
          <p><strong><%= link_to profile.company_name, investors_profile_path(investor) %></strong></p>
        <% end %>

        <% if profile.website %>
          <p><%= link_to profile.website, "//" + profile.website, target: "_blank" %></p>
        <% end %>
        Reviews : <%= profile.evaluations.count %> | General score : <%= profile.total_average_score %>
      </div>

    </div>
  </div>

  <br>

<% end %>