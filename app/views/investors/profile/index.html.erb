<!-- app/views/investors/profile/index.html.erb -->
<h1>All the Investors</h1>

<% @investors.each do |investor| %>

  <div class="img-container img-rounded full-padded">
    <div class="row">

      <div class="col-xs-12 col-sm-3">
        <%= link_to investors_profile_path(investor) do %>
          <%= image_tag investor.profile_pic.url(:thumb), size: "100x100", alt: investor.company_name %>
        <% end %>
      </div>

      <div class="col-xs-12 col-sm-9">
        <% if investor.company_name %>
          <p><strong><%= link_to investor.company_name, investors_profile_path(investor) %></strong></p>
        <% end %>

        <% if investor.website %>
          <p><%= link_to investor.website, "//" + investor.website, target: "_blank" %></p>
        <% end %>
        Reviews : <%= investor.evaluations.count %> | General score : <%= investor.total_average_score %>
      </div>

    </div>
  </div>

  <br>

<% end %>