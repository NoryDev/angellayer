<!-- app/views/investors/profile/index.html.erb -->
<h1>All the Investors</h1>

<div class="alert alert-warning">Are we missing an investor you know? Add it! <%= link_to "Add an investor", new_investors_profile_path, class: "btn btn-success pull-right btn-xs" %> </div>
<div class="padded text-center ">
</div>

<% @profiles.each do |profile| %>

  <div class="img-container img-rounded full-padded">
    <div class="row">

      <div class="col-xs-12 col-sm-3">
        <%= link_to investors_profile_path(profile) do %>
          <%= image_tag profile.profile_pic.url(:thumb), size: "100x100", alt: profile.company_name %>
        <% end %>
      </div>

      <div class="col-xs-12 col-sm-9">

        <% if profile.investor_id %>
          <div class="label label-success align-right">
            <span>claimed!</span>
          </div>
        <% else %>
          <div class="label label-danger align-right">
            <span>unclaimed</span>
          </div>
        <% end %>

        <% if profile.company_name %>
          <p><strong><%= link_to profile.company_name, investors_profile_path(profile) %></strong></p>
        <% end %>

        <% if profile.website %>
          <p><%= link_to profile.website, "//" + profile.website, target: "_blank" %></p>
        <% end %>
        Reviews : <%= profile.evaluations.count %> | General score : <%= profile.total_average_score %>
      </div>

    </div>
  </div>

  <br>

<% end %>