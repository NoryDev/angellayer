<!-- app/views/investors/profile/show.html.erb -->
<div class = "img-container img-rounded full-padded">
  <h1 class = "text-center"><%= @investor.company_name %></h1>
  <hr>

  <div class="row">
    <div class="col-xs-12 col-sm-3">
      <%= image_tag @investor.profile_pic.url(:thumb), size: "100x100", alt: @investor.company_name %>
    </div>
    <div class="col-xs-12 col-sm-9">
      <p>
        <i class="fa fa-home"></i> <%= @investor.physical_address %>
      </p>
      <p>
        <i class="fa fa-globe"></i> <%= link_to @investor.website, @investor.website %>
      </p>
      <p>
        <i class="fa fa-phone"> &nbsp; </i><%= @investor.phone_number %>
      </p>
    </div>
  </div>
  <hr>
  <p>
    <strong>Rating:</strong> <%= @investor.total_average_score %> / 5.0 (<%= @investor.nb_of_rates %> rates)
  </p>

  <ul class="list-inline">
    <li>
      <div>Reputation</div>
      <%
        if @investor.rating_reputation > 3.5
          level = "success"
        elsif @investor.rating_reputation < 2.5
          level = "danger"
        else
          level = "warning"
        end
      %>
      <div class="label label-<%= level %>">
        <% star_used = 0 %>
        <% @investor.rating_reputation.to_i.times do %>
          <i class="fa fa-star"></i>
          <% star_used = @investor.rating_reputation.to_i %>
        <% end %>
        <% if @investor.rating_reputation - @investor.rating_reputation.to_i >= 0.5 %>
          <i class="fa fa-star-half-o"></i>
          <% star_used += 1 %>
        <% end %>
        <% empty = 5 - star_used
          empty.times do %>
          <i class="fa fa-star-o"></i>
        <% end %>
      </div>
    </li>

    <li>
      <div>Deal</div>
      <%
        if @investor.rating_deal > 3.5
          level = "success"
        elsif @investor.rating_deal < 2.5
          level = "danger"
        else
          level = "warning"
        end
      %>
      <div class="label label-<%= level %>">
        <% star_used = 0 %>
        <% @investor.rating_deal.to_i.times do %>
          <i class="fa fa-star"></i>
          <% star_used = @investor.rating_deal.to_i %>
        <% end %>
