          <% star_used += 1 %>
        <% end %>
        <% empty = 5 - star_used
          empty.times do %>
          <i class="fa fa-star-o"></i>
        <% end %>
      </div>
    </li>

    <li>
      <div>Pitch</div>
      <%
        if @investor.rating_pitch > 3.5
          level = "success"
        elsif @investor.rating_pitch < 2.5
          level = "danger"
        else
          level = "warning"
        end
      %>
      <div class="label label-<%= level %>">
        <% star_used = 0 %>
        <% @investor.rating_pitch.to_i.times do %>
          <i class="fa fa-star"></i>
          <% star_used = @investor.rating_pitch.to_i %>
        <% end %>
        <% if @investor.rating_pitch - @investor.rating_pitch.to_i >= 0.5 %>
          <i class="fa fa-star-half-o"></i>
          <% star_used += 1 %>
        <% end %>
        <% empty = 5 - star_used
          empty.times do %>
          <i class="fa fa-star-o"></i>
        <% end %>
      </div>
    </li>

    <li>
      <div>Competence</div>
      <%
        if @investor.rating_competence > 3.5
          level = "success"
        elsif @investor.rating_competence < 2.5
          level = "danger"
        else
          level = "warning"
        end
      %>
      <div class="label label-<%= level %>">
        <% star_used = 0 %>
        <% @investor.rating_competence.to_i.times do %>
          <i class="fa fa-star"></i>
          <% star_used = @investor.rating_competence.to_i %>
        <% end %>
        <% if @investor.rating_competence - @investor.rating_competence.to_i >= 0.5 %>
          <i class="fa fa-star-half-o"></i>
          <% star_used += 1 %>
        <% end %>
        <% empty = 5 - star_used
          empty.times do %>
          <i class="fa fa-star-o"></i>
        <% end %>
      </div>
    </li>

    <li>
      <div>Commitment</div>
      <%
        if @investor.rating_commitment > 3.5
          level = "success"
        elsif @investor.rating_commitment < 2.5
