<% @profiles.each do |profile| %>
  <tr>

<!-- =========================
INVESTOR COLUMN
============================== -->
    <td>
      <%= link_to investors_profile_path(profile) do %>
        <%= image_tag profile.profile_pic.url(:thumb), size: "100x100", alt: profile.company_name, class: "snippet-avatar-3" %>
      <% end %>

      <% if profile.company_name %>
        <%= link_to profile.company_name, investors_profile_path(profile) %>
      <% end %>
    </td>

<!-- =========================
MOOD COLUMN
============================== -->
    <td>
      <% score = profile.total_average_score
        if score.nil?
          level = "default"
        elsif score > 3.5
          level = "success"
        elsif score < 2.5
          level = "danger"
        else
          level = "warning"
        end %>
        <div class="label label-<%= level %>">
          <% if score.nil? %>
              Not Rated
          <% else %>
            <% star_used = 0 %>
            <% score.to_i.times do %>
              <i class="fa fa-star"></i>
              <% star_used = score.to_i %>
            <% end %>
            <% if score - score.to_i >= 0.5 %>
              <i class="fa fa-star-half-o"></i>
              <% star_used += 1 %>
            <% end %>
            <% empty = 5 - star_used
              empty.times do %>
              <i class="fa fa-star-o"></i>
            <% end %>
          <% end %>
        </div>
    </td>

<!-- =========================
RATING COLUMN
============================== -->

    <td class = "text-yellow">
      <%= render 'evaluations/stars', score: profile.total_average_score %>
    </td>

<!-- =========================
SHARKRANK COLUMN
============================== -->

    <td>
      <%= render 'evaluations/grade', score: profile.total_average_score %>
    </td>

<!-- =========================
LAST REVIEW COLUMN
============================== -->

    <td>
      <% if profile.evaluations.count != 0 %>
      <%= time_ago_in_words(profile.evaluations.last.created_at) %> ago
      <% else %>
      Add Review
      <% end %>
    </td>
</tr>
<% end %>