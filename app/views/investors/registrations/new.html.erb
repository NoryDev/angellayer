<div class="col-xs-12 col-sm-6 col-sm-offset-3">
  <h4>Sign up as an Investor</h4>
  <hr>
  <%= link_to "I'm not an Investor, I'm a Founder", new_founder_registration_path, class: "btn btn-success" %>
  <br>
  <br>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <%= f.input :email, required: true, autofocus: true, placeholder:"Email", label: false %>
    <%= f.input :password, required: true, placeholder: ("Password - #{@minimum_password_length} characters minimum" if @validatable), label: false %>
    <%= f.input :password_confirmation, required: true, placeholder:"Confirm Password", label: false %>
    <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
  <% end %>
  <br>
  <div class="btn-group" role="group">
    <%= render "investors/shared/links" %>
  </div>
</div>