<div class="comment-show">
  <div class="text-right">
    <small>
      <span id="comment-<%= comment.id %>"><%= comment.content %></span> -
      <span class="text-muted">
        <%= link_to comment.founder, founders_profile_path(comment.founder) %> &nbsp;
        <%= time_ago_in_words(comment.created_at) %> ago

        <span id="comment-<%= comment.id %>-edit">
          <% if comment.updated_at != comment.created_at %>
            &nbsp;| Edited: <%= time_ago_in_words(comment.updated_at) %> ago
          <% end %>
        </span>
         &nbsp;

        <% if current_founder == comment.founder || (current_founder && current_founder.admin) %>
          <a href="" class="edit-btn"><i class="fa fa-pencil edit-button-<%= comment.id %>"></i></a>
        <% end %>
      </span>
    </small>
  </div>
  <hr class="small">

  <% if current_founder == comment.founder || (current_founder && current_founder.admin) %>
    <div class="edit-comment-form" id="edit-form-<%= comment.id %>">
      <%=render 'comments/edit_form', evaluation: comment.evaluation, comment: comment %>
    </div>
  <% end %>
</div>
<!-- See comment.js for the hide and show form -->
