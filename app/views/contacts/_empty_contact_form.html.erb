<%= form_for :resource, url: contacts_send_contact_path do |f| %>

<div class="form-group">
<%= f.text_field :name, class: "form-control input-box", placeholder: "Your name", required: true %>
</div>
<div class="form-group">
<%= f.email_field :email, class: "form-control input-box", placeholder: "Your email", required: true %>
</div>

<div class="form-group">
<%= f.text_field :subject, class: "form-control input-box", placeholder: "Subject" %>
</div>
<div class="form-group">
<%= f.text_area :message, rows: "10", class: "form-control textarea", placeholder: "Your message...", required: true %>
</div>
<%= f.submit "Send", class: "btn btn-primary text-left", id: "submit" %>
<% end %>