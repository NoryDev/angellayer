    <div class="row">
      <div class="col-xs-12 col-sm-7 intro-section">
        <h1 data-sr="wait 0.1s, ease-in-out 100px" class="intro">Welcome to SharkRank

        </h1>
        <p data-sr="move 16px scale up 20%, over 2s" class = "white-text big-text feature-list-1">Sharkrank is a crowdsourced rating and review system of the reputation and interactions of investors worldwide. <br> <br> Rate and review angel investors â€“ Help other founders by publicly sharing your experiences when dealing with investors. Share trustworthy and first-hand tesimonials on the reputation of investors, and stop wasteful interactions.</p>
      </div>

      <div class="col-xs-12 col-sm-4 intro-section">

    <!-- =========================
    SIGN-IN FORM
    ============================== -->

        <div class="white-box">
          <%= form_for :resource, :html => { class: "login-form", id: "login"}, url: log_in_path do |f| %>
          <%= f.email_field :email, class: "form-control input-box", placeholder: "Email", value: flash[:log_email] %>
            <div class="col-xs-12">
            <div class="col-sm-8 col-xs-12">
            <%= f.password_field :password, class: "form-control input-box col-xs-12", placeholder: "Password" %>
            </div>

            <div class="col-sm-4 col-xs-12">
            <%= f.submit "Log in", class: "btn btn-primary col-sm-11 col-sm-offset-1 col-xs-3 button-margin-top", id: "submit" %>
            </div>

          <% end %>
          </div>
          <small><%= link_to "Forgot your password?", new_password_path(:founder), class: "text-right" %></small>
          <br>
          <small> Sign in with
          <%= link_to "Facebook, ", founder_omniauth_authorize_path(:facebook)%>
          <%= link_to "Twitter ", founder_omniauth_authorize_path(:twitter)%>  or
          <%= link_to "Linkedin ", founder_omniauth_authorize_path(:linkedin)%>
          </small>

        </div>
        <br>

    <!-- =========================
    SIGN-UP FORM
    ============================== -->

        <div class="white-box">
          <h4 class="black-button">New to Sharkrank?</h4>
          <%= form_for :resource, :html => { class: "registration-form", id: "register"}, url: sign_up_path(:resource) do |f| %>
          <div class="lower-margin">
            <% if flash[:is_investor] %>
            <%= f.check_box :is_investor, class: "check-toggle check-toggle-round-flat", id:"cc-toggle", checked: "checked" %>
            <% else %>
            <%= f.check_box :is_investor, class: "check-toggle check-toggle-round-flat", id:"cc-toggle", checked: "unchecked" %>
            <% end %>
            <label for="cc-toggle"></label>
            <span class="off black-button">I'm an investor</span>
          </div>
          <div class="form-group">
            <%= f.text_field :code, class: "form-control input-box", placeholder: "Your invitation code" %>
          </div>
          <div class="login-form">
            <%= f.email_field :email, class: "form-control input-box ", placeholder: "Email", value: flash[:sign_email] %>
            <%= f.password_field :password, class: "form-control input-box", placeholder: "Password" %>
            <div class="col-xs-12">
              <div class="col-sm-8 col-xs-12">
                <%= f.password_field :password_confirmation, class: "form-control input-box", placeholder: "Confirm Password" %>
              </div>
              <div class="col-sm-4 col-xs-12">
                <%= f.submit "Get Started", class: "btn btn-danger col-sm-11 col-sm-offset-1 col-xs-3 button-margin-top", id: "submit" %>
              </div>
              </div>
              <% end %>
              <small>
                Sign-up with
              <%= link_to "Facebook, ", founder_omniauth_authorize_path(:facebook)%>
              <%= link_to "Twitter ",founder_omniauth_authorize_path(:twitter)%>
              or
              <%= link_to "LinkedIn ",founder_omniauth_authorize_path(:linkedin)%>
              </small>
            </div>
          </div>

      </div> <!-- closing tag for 2 forms -->
    </div> <!-- row closing tag -->
    <a class="" href="#community"><i class="fa fa-angle-down pulse scroll-btn"></i></a>
  </section>
</div> <!-- container closing tag -->

