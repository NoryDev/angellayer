<!-- Evaluations index -->

<!-- Order by name/rating... by ordering the params in the controller -->
<strong>Order by </strong>
<%= link_to "Date", evaluations_path(order: :date), class: "btn btn-primary btn-xs" %>
<%= link_to "Rating", evaluations_path(order: :average_score), class: "btn btn-primary btn-xs" %>
<%= link_to "Company name", evaluations_path(order: :company_name), class: "btn btn-primary btn-xs" %>
<%= link_to "Review title", evaluations_path(order: :title_review), class: "btn btn-primary btn-xs" %>
<%= link_to "Founder", evaluations_path(order: :founder), class: "btn btn-primary btn-xs" %>
<br>
<br>

<!-- Using partial to render existing show view in the index -->

<% @evaluations.each do |evaluation| %>
  <%= render 'evaluations/show', evaluation: evaluation %>
<% end %>
<br>