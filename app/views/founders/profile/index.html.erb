<!-- app/views/founders/profile/index.html.erb -->
<h1 class="text-center">Founders</h1>
<div class="colored-line"></div>
  <br>

<% @founders.each do |founder| %>
<div class="img-container img-rounded full-padded">
  <div class="row">

    <div class="col-xs-12 col-sm-3">
      <%= image_tag founder.profile_pic.url(:thumb), size: "100x100", alt: founder.name %>
    </div>

    <div class="col-xs-12 col-sm-9">
      <p><strong><%= link_to founder.name, founders_profile_path(founder) %></strong>
        <br>
        <br>

        <% if founder.website %>
        <%= link_to founder.website, "//" + founder.website, target: "_blank" %>
        <% else %>
        <% end %>
        <br>

        <% if current_founder == founder || (current_founder && current_founder.admin) %>
          <%= link_to "Edit", edit_founders_profile_path(founder) %>
        <% end %>
        <br>

      </div>

    </div>
  </div>
  <br>
<% end %>